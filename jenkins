pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'myrepo'
        DOCKER_REGISTRY = 'michaelemad/'  // Example: docker.io
        DOCKER_TAG = "latest" // Unique tag per branch/build
    }

    stages {
       // stage('Checkout Code') {
      //      steps {
                // Checkout the repository
             //   git 'https://github.com/michaelemad7/myrepo'
     //       }
       // }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    docker.build("${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run tests using Docker
                    docker.image("${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG}").inside {
                        sh 'npm test'  // Assuming you have tests for your app
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Log in to Docker registry (optional if public)
                    withDockerRegistry([credentialsId: 'docker-credentials', url: 'https://index.docker.io/v1/']) {
                        docker.image("${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG}").push()
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                // Deploy your application (this is optional, depends on your setup)
                echo 'Deploying Docker container...'
                // You can trigger a deployment here using a Kubernetes, Docker Swarm, or other method
            }
        }
    }

    post {
        always {
            // Clean up Docker images after build
            sh 'docker system prune -f'
        }

        success {
            echo 'Build and Dockerize successful!'
        }

        failure {
            echo 'Build failed, check the logs.'
        }
    }
}

pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'nodeapp'
        DOCKER_REGISTRY = 'myrepo'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from version control (e.g., Git)
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }

        stage('Run Docker Image') {
            steps {
                script {
                    // Run the Docker image (optional step to test locally)
                    sh 'docker run -d -p 3000:3000 $DOCKER_IMAGE'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Log in to Docker (replace credentials with environment variables or Jenkins secrets)
                    sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD $DOCKER_REGISTRY'

                    // Push the Docker image to a registry (e.g., Docker Hub or a private registry)
                    sh 'docker push $DOCKER_IMAGE'
                }
            }
        }
    }

    post {
        always {
            // Clean up Docker resources if necessary
            sh 'docker system prune -f'
        }
    }
}
